{% block html_head_container %}

{% include 'html-header.twig' %}
{% block head %}
{% endblock %}
</head>
{% endblock %}

<body class="{{body_class}}" data-template="base.twig">
    <header class="header" >
        {% block header %}
        <div class="container">
            <div class="row">
                <h3 class="hdr-logo four columns u-pull-left" role="banner">
                    <a class="hdr-logo-link" href="{{site.link}}" rel="home">{{site.name}}</a>
                </h3>
                <nav id="nav-main" class="eight columns nav-main u-pull-right" role="navigation">
                    <ul class="main-nav">
                        {% for item in primarymenu.get_items %}
                        {% if item.get_children %}
                        <li class="nav-main-item has-children {{item.classes | join(' ')}}"><a class="nav-main-link" href="{{item.get_link}}">{{item.title}}</a>
                            <ul class="sub-menu">
                                {% for child in item.get_children %}
                                <li class="nav-drop-item"><a href="{{child.get_link}}">{{child.title}}</a></li>
                                {% endfor %}
                            </ul>
                            {% else %}
                            <li class="nav-main-item {{item.classes | join(' ')}}"><a class="nav-main-link" href="{{item.get_link}}">{{item.title}}</a>
                                {% endif %}
                        </li>
                        {% endfor %}
                    </ul>

                </nav><!-- #nav -->
            </div>
        </div>
        {% endblock %}
    </header>

    <section id="content" role="main" class="content-wrapper">
        {% if title %}<h1>{{title}}</h1>{% endif %}
        <div class="wrapper {{sidebar_class}}">
            {% block content %}
            Sorry, no content
            {% endblock %}
        </div>
        {% if sidebar %}
        <aside class="layout-sidebar">
            {{sidebar}}
        </aside>
        {% endif %}
    </section>

    {% block footer %}
    <footer id="footer">
        {% include 'footer.twig' %}
    </footer>
    {{ function('wp_footer') }}
    {% endblock %}
</body>
</html>
