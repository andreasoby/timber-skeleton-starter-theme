{% extends "base.twig" %}

{% block content %}
<div class="container">
    <div class="row">
        <div>
            <div class="twelve columns"><article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
                <section class="article-content">
                    <h1 class="article-h1">{{post.title}}</h1>
                    <p class="blog-author">
                        <span>By</span><a href="{{post.author.path}}"> {{ post.author.name }} </a><span>&bull;</span> {{ post.post_date|date}}
                    </p>
                    <div class="article-body">
                        {{post.content}}
                    </div>
                </section>
                </article>
            </div>
            <div class="twelve columns">
                <div class="comments">
                    <div class="responses">
                        <h2>Komentarze:</h2>
                        {% for cmt in post.get_comments() %}
                        {% include "comment.twig" with {comment:cmt} %}
                        {% endfor %}
                    </div>
                </div>
            </div>
            <div class="twelve columns">
                <div class="comments">
                    <div class="respond">
                        {{ comment_form }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        {% if post.prev %}
        <div class="three columns u-pull-left"><a href="{{post.prev.link}}">Poprzedni</a></div>
        {% endif %}

        {% if post.next %}
        <div class="three columns u-pull-right"><a href="{{post.next.link}}">NastÄ™pny</a></div>
        {% endif %}
    </div>
</div>
{% endblock %}
